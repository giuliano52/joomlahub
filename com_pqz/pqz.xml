<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.0.0" method="upgrade">
    <name>PQZ</name>
    <!-- The following elements are optional and free of formatting conttraints -->
    <creationDate>November 2014</creationDate>
    <author>Giuliano 52</author>
    <version>0.1.2</version>
    <description>PQZ a quiz generator for joomla</description>
 
    <files folder="site">
         <filename>pqz.php</filename>
        <filename>controller.php</filename>
        <filename>direct.php</filename>
        <folder>img</folder>
		<folder>lib</folder>
        <folder>views</folder>
        <folder>language</folder>
        <folder>models</folder>
    </files>

    <administration>
        <menu>PQZ</menu>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>pqz.php</filename>
            <folder>sql</folder>
        </files>
    </administration>
        
    <install folder="admin">
        <sql>
            <file charset="utf8" driver="mysql">sql/install.sql</file>
        </sql>
    </install>
    <uninstall folder="admin">
        <sql>
            <file charset="utf8" driver="mysql">sql/uninstall.sql</file>
        </sql>
    </uninstall>

</extension>

